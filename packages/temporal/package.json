{
  "name": "@temporal-electronic-signature/temporal",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "tsc --build",
    "build.watch": "tsc --build --watch",
    "start": "ts-node src/worker.ts",
    "start.watch": "nodemon src/worker.ts",
    "workflow": "ts-node src/exec-workflow.ts"
  },
  "devDependencies": {
    "typescript": "^4.4.2",
    "@tsconfig/node14": "^1.0.0",
    "ts-node": "^10.2.1",
    "nodemon": "^2.0.12"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "execMap": {
      "ts": "ts-node"
    }
  },
  "dependencies": {
    "temporalio": "^0.4.3"
  },
  "workspaces": {
    "nohoist": ["**temporalio**", "**temporalio**/**"]
  }
}
